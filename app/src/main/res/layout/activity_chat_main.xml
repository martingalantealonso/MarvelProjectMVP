<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <!-- Header -->
    <LinearLayout
        android:id="@+id/main_chat_header"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical"
        android:padding="15dp">

        <ImageView
            android:id="@+id/cursiveIcon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@null"
            android:src="@drawable/avd_handwriting_android_design" />

    </LinearLayout>

    <!-- Body -->
    <LinearLayout
        android:id="@+id/main_chat_body"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/btn_bluetooth"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="@color/colorAccent"
                        android:scaleType="fitCenter"
                        android:src="@drawable/asl_trimclip_bluetooth" />

                    <ImageView
                        android:id="@+id/btn_visibility"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="@color/colorFab"
                        android:scaleType="fitCenter"
                        android:src="@drawable/asl_trimclip_eye" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/btn_device_list"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="@color/colorPurple"
                        android:scaleType="fitCenter"
                        android:src="@drawable/vd_person" />

                    <ImageView
                        android:id="@+id/btn_settings"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="@color/colorOrange"
                        android:scaleType="fitCenter"
                        android:src="@drawable/vd_settings" />

                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:clickable="false"
                android:minHeight="200dp"
                android:rotation="180"
                android:scaleType="fitXY"
                android:src="@drawable/wave_vector" />
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>
