<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:id="@+id/wave_checked"
        android:drawable="@drawable/wave_vector"
        android:state_checked="true" />
    <item
        android:id="@+id/wave_unchecked"
        android:drawable="@drawable/wave_vector_reversed"
        android:state_checked="false" />


    <transition
        android:drawable="@drawable/wave_vector"
        android:duration="6000"
        android:fromId="@id/wave_unchecked"
        android:toId="@id/wave_checked" />

    <transition
        android:drawable="@drawable/wave_vector_reversed"
        android:duration="6000"
        android:fromId="@id/wave_checked"
        android:toId="@id/wave_unchecked" />

</animated-selector>